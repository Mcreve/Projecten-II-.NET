@model IEnumerable<DidactischeLeermiddelen.ViewModels.WishlistViewModel>

@{
    ViewBag.Title = "Verlanglijstje";
}

<h2>Verlanglijstje</h2>
@Html.Partial("_notificationPartial")
@using (Html.BeginForm()) { 
    @Html.LabelFor(model => model.First().Date)
    @Html.EditorFor(model => model.First().Date, Model.First().Date)
    <button type="submit" class="form-control btn btn-primary">wijzig datum</button>
}
<table class="table">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountWanted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountBlocked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountInCatalog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountUnavailable)
        </th>
    </tr>

    @using (Html.BeginForm("Add", "Reservation"))
    {
        @Html.EditorForModel()

        <input type="submit" value="Reserveer items">
    }
</table>