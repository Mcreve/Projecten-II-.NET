@model IEnumerable<DidactischeLeermiddelen.Models.Domain.WishlistLine>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("+", "Plus", new { id = item.LearningUtility.Id }) |
            @Html.ActionLink("-", "Min", new { id = item.LearningUtility.Id }) |
            @Html.ActionLink("Delete", "Remove", new { id = item.LearningUtility.Id })
        </td>
    </tr>
}

</table>
